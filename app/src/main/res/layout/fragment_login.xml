<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.LoginFragment">
<ImageView
    android:layout_width="250dp"
    android:layout_height="300dp"
    app:layout_constraintTop_toTopOf="parent"
    android:src="@drawable/login"
    android:id="@+id/image"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="50dp"
    />
    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Login"
        android:textColor="#000033"
        app:layout_constraintTop_toBottomOf="@id/image"
        android:id="@+id/TxtView2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:textSize="36dp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Please Sign in to continue"
        android:textColor="#000033"
        app:layout_constraintTop_toBottomOf="@id/TxtView2"
        android:id="@+id/TxtView3"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:textStyle="bold"
        />
<com.google.android.material.textfield.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="70dp"
    app:layout_constraintTop_toBottomOf="@+id/TxtView3"
    app:boxStrokeWidth="3dp"
    app:endIconMode="custom"
    android:id="@+id/userName"
    app:layout_constraintStart_toStartOf="parent"
    app:boxStrokeWidthFocused="3dp">
    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:textColor="#000033"
        android:textSize="20dp"
        android:background="@color/material_dynamic_neutral_variant80"/>
</com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@+id/userName"
        app:boxStrokeWidth="3dp"
        android:layout_marginTop="10dp"
        android:id="@+id/userPassword"
        app:endIconMode="password_toggle"
        app:layout_constraintStart_toStartOf="parent"
        app:boxStrokeWidthFocused="3dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"

            android:textColor="#000033"
            android:textSize="20dp"
            android:background="@color/material_dynamic_neutral_variant80"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remember me"
        android:id="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/userPassword"
        android:textSize="22dp"
        android:layout_marginTop="10dp"
/>

    <com.google.android.material.chip.Chip
        android:id="@+id/chip"
        android:layout_width="64dp"
        android:layout_height="16dp"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/userPassword"
        android:layout_marginTop="20dp"/>
    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:text="Sign In"
        android:textSize="25sp"
        android:background="#000033"
    />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an account yet?"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/login"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textSize="18sp"
        android:textColor="#000033"
        android:textStyle="bold"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toEndOf="@id/tvMessage"
        app:layout_constraintBottom_toBottomOf="@id/tvMessage"
        android:paddingStart="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>